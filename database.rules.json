{
  "rules": {
    "users": {
      ".read": true,
      ".write": true
    },
    "games": {
      ".read": true,
      "$game_id": {
        ".read": "auth != null && (!data.exists() || data.child('players').child(auth.uid).child('perm').val() !== null)",
        ".write": "auth != null && (!data.exists() || data.child('players').child(auth.uid).child('perm').val() === 'owner')"
      }
    }
  }
}