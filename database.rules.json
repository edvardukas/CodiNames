{
  "rules":{
    "users": {
      ".read" : true,
      ".write" : true
    },
    "games": {
      "$game_id": {
        ".read": "auth != null && (!data.exists() || data.child('allowed_users').child(auth.uid).val() == 'owner')",
        ".write": "auth != null && (!data.exists() || data.child('allowed_users').child(auth.uid).val() == 'owner')"
      }
    }
  }
}